<%= render "navbar" %>
<%= render "banner" %>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
<link rel="stylesheet" href="fontawesome-stars.css">
<div class="container">
  <div class="row justify-content-center">
    <h1 class="header"><%= @list.name %></h1>
    <hr>
    <div class="col-md-12">
      <div class="box-el cards my-4">
        <% @list.movies.each do |movie| %>
        <% background_url = cl_image_path movie.poster_url %>
        <div class="box" style="background-image: url('<%= background_url %>');">
          <div class="box-inner">
            <div class="the-content-box">
              <div class="content-box-inner">
                <h2><%= movie.title %></h2>
                <p><i class="fas fa-star star-yellow"></i><%= movie.rating %></p>
                <hr>
                <p><%= movie.overview %></p>
              </div>
              <%#= link_to "delete", bookmark_path, method: :delete, data: { confirm: "Are you sure you want to remove #{movie.title}?"} %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <%= link_to "Back", lists_path, class: 'button' %>
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'button' %>
    </div>
  </div>
</div>
<div class="footer-margin">
  <%= render "footer" %>
</div>

