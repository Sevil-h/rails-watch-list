<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="rounded shadow p-3 m-5">
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Classic' %>
          <%= f.input :photo,
            as: :file,
            label: ("List Photo"),
            input_html: { autocomplete: "photo"} %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
