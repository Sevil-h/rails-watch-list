<%= render "navbar" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('assets/video.gif');">
  <div class="container">
    <h1 class="header">My Lists</h1>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="box-el cards my-4">
        <% @lists.each do |list| %>
        <% background_url = cl_image_path list.photo.key %>
        <div class="box" style="background-image: url('<%= background_url %>');">
          <div class="box-inner">
            <div class="the-content-box">
              <div class="content-box-inner">
                <h2><%= list.name %></h2>
                <hr>
                <ul class="mt-2">
                  <% list.bookmarks.each do |bookmark| %>
                  <li><%= bookmark.movie.title %></li>
                  <% end %>
                </ul>
                <%= link_to "View List", list_path(list), class: "button" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <%= link_to "Back", root_path, class: 'button' %>
      <%= link_to "Add a new movie list", new_list_path, class: 'button' %>
    </div>
  </div>
</div>
<div class="footer-margin">
  <%= render "footer" %>
</div>
